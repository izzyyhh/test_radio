<%= form_for(chatmessage, remote: true) do |form| %>
  <div class="field">
    <%= form.hidden_field :username, value: current_user.email %>

    <%= form.label :content %>
    <%= form.text_area :content, id: 'content-input' %>
  </div>

  <%= form.hidden_field :server_id, value: @server.id %>

  <div class="actions">
    <%= form.submit 'Submit', data: { disable_with: false }%>
  </div>
<% end %>
