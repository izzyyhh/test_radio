<% if user_signed_in? %>
<div class='servers-index'>
    <p>Hi, <%= current_user.email %>, welcome to TestRadio!</p>
    <%= link_to 'logout', destroy_user_session_path, method: :delete %>
    <div id='server-id' data-server-id='<%= @server.try(:id) %>'></div>

    <div class='swrap'>

        <%= render 'serverlist'%>

        <div class="server-content">
            <% if @server.present? %>

            <% if @server.serverpic.attached? %>
                <%= image_tag url_for(@server.serverpic) %>
            <% end %>

                <%= render 'playlist' %>
                <%= render 'chat' %>
                <%= render 'memberlist' %>
                
                <h2> TRACK </h2>

                <%= render 'tracks/form', track: Track.new %>
                <div id=>
                <div id ="player"></div>
            <% else %>
                <h2><%= current_user.email %>, welcome to TestRadio </h2>
            <% end %>
        </div>

    </div>
</div>
<% else %>
    <%= render 'shared/login' %>
<% end %>
<%= javascript_pack_tag 'youtubeplayer.js' %>
<script src="https://www.youtube.com/iframe_api"></script>
