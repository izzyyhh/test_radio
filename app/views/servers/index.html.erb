    <div class='wrapper'>
        <%= render 'topbar' %>
        <%= render 'serverlist'%>
        <%= render 'playlist' %>
        <%= render 'addtrackmodal' %>
        <%= render 'chat' %>
        <%= render 'musicbar' %>
        <%= render 'memberlist' %>
        <div id ="player"></div>
    </div>
    <% else %>
    <div class='wrapper--servernotpresent'>
        <%= render 'serverlist'%>
        <%= render 'topbar' %>
        <%= render 'home' %>
    </div>
    <% end %>
