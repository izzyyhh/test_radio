<div class='topbar'>
    <div class='topbar__user'>
        <% if current_user.profilepic.attached? %>
            <div class='topbar__userpic'><%= image_tag(url_for(current_user.profilepic)) %></div>
        <% else %>
            <div class='topbar__userpic'><%= image_tag("default_pp.png")%></div>
        <% end %>
        <span><%= current_user.name %></span>
        <div class='topbar__actions'>
            <%= link_to '<i class="fas fa-cog"></i>'.html_safe, edit_user_registration_path %>
            <%= link_to '<i class="fas fa-sign-out-alt"></i>'.html_safe, destroy_user_session_path, method: :delete, class: 'topbar__logout', data: { confirm: 'Are you sure, you want to logout?' } %>
        </div>
    </div>
</div>