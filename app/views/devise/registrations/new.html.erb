<div class='wrapper--login'>

  <div class='wrapper--login__content'>
    <div>
      <h1>Sign Up</h1>
      <p>Welcome to YouRadio! Create a server with your friends and listen to your favourite songs together.</p>
    </div>
  </div>

  <div class ='form-side'>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class='login signup'>
    <h2 class='login__heading'>YouRadio</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="login__input-and-label">
            <%= f.text_field :email, autofocus: true, autocomplete: "off", :required => true %>
            <%= f.label :email %>
          </div>

          <div class="login__input-and-label">
            <%= f.text_field :name, autocomplete: "off", :required => true %>
            <%= f.label :username %>
          </div>

          <div class="login__fileinput-and-label">
            <%= f.label :Profilepicture %><br>
            <%= f.file_field :profilepic %>
          </div>


          <div class="login__input-and-label">

            <%= f.password_field :password, autocomplete: "new-password", :required => true %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.label :password %><br>

          </div>

          <div class="login__input-and-label">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", :required => true %>
            <%= f.label :password_confirmation %><br />
          </div>

          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
          <%= render "devise/shared/links" %>
        <% end %>
    </div>
  </div>
</div>







