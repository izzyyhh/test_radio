<div class='wrapper--login'>

  <div class='wrapper--login__content'>
    <div>
      <h1>Edit profile</h1>
    </div>
  </div>
  <div class='form-side'>
    <div class='login edituser'>

      <% if current_user.profilepic.attached? %>
      <div class='topbar__userpic edit__pp'><%= image_tag(url_for(current_user.profilepic)) %></div>
      <% else %>
          <div class='topbar__userpic'><%= image_tag("default_pp.png")%></div>
      <% end %>

    <div class='login__heading'><%= current_user.name %></div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="login__input-and-label">
          <%= f.text_field :email, autofocus: true, autocomplete: "off", :required => true %>
          <%= f.label :email %>
        </div>

        <div class="login__input-and-label">
          <%= f.text_field :name, autocomplete: "off", :required => true %>
          <%= f.label :username %>
        </div>

        <div class="login__fileinput-and-label">
          <%= f.label :Profilepicture %><br>
          <%= f.file_field :profilepic %>
        </div>

          <div class="login__input-and-label">
            <%= f.password_field :password, autocomplete: "new-password" %>
            <%= f.label :password %>
            <em>leave blank if u don't want to change</em>
          </div>

        <div class="login__input-and-label">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          <%= f.label :password_confirmation %>
          <em>leave blank if u don't want to change</em>
        </div>

          <div class="login__input-and-label">
            <%= f.password_field :current_password, autocomplete: "current-password", :required => true %>
            <%= f.label :current_password %>
            <em>(we need your current password to confirm your changes)</em>
          </div>

          <div style='margin-top: 1.8rem' class="actions">
            <%= f.submit "Update" %>
          </div>
    <% end %>

    </div>
  <%= link_to "Back", :back, method: :get, class: 'edit__back' %>
  <%= link_to "Cancel my account", registration_path(resource_name), class: 'edit__destroy', data: { confirm: "Are you sure?" }, method: :delete %></p>
  </div>
</div>








